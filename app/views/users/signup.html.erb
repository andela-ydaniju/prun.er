<%= provide(:title, "Create Account") %>
<%= render "partials/popular_header" %>
<div class="row container signup-box center-align">
  <div class = "col l5 m8 s12 signup">
    <%= form_for @user, html: { class: "signin card-panel" } do |f| %>
     <%= render "partials/error_messages" %>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control"%>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="row submit-signin">
        <%= f.submit "Create Account", class: "btn waves-effect waves-light blue-signup" %>
      </div>
      <div class="row comment-signup">
        <p>If you got an account, <%= link_to "please Sign In", signin_path %></p>
      </div>
    <% end %>
  </div>
</div>
