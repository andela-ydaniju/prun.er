<div class="row container signup-box center-align">
    <div class = "col l5 m8 s12 signup">
      <%= form_tag("/users/signup", method: "post", class: "signup card-panel") do -%>
        <div class="row entry-signup">
          <div class="input-field">
            <%= text_field_tag "username", "", class: "validate" %>
            <%= label_tag :username, "Username" %>
          </div>
        </div>
        <div class="row entry-signup">
          <div class="input-field">
            <%= text_field_tag "email", "", class: "validate" %>
            <%= label_tag :email, "Email" %>
          </div>
        </div>
        <div class="row entry-signup">
          <div class="input-field">
            <%= text_field_tag "password", "", class: "validate" %>
            <%= label_tag :password, "Password" %>
          </div>
        </div>
        <div class="row entry-signup">
          <div class="input-field">
            <%= text_field_tag "password", "", class: "validate" %>
            <%= label_tag :password, "Password" %>
          </div>
        </div>
        <div class="row submit-signup">
          <button class="btn waves-effect waves-light blue-signup" type="submit" name="action">Create Account
          </button>
        </div>
        <div class="row comment-signup">
          <p>If you got an account, please Sign In</p>
        </div>
      <% end -%>
    </div>
</div>
