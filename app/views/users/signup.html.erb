<div class="row container signup-box center-align">
  <div class = "col l5 m8 s12 signup">
    <%= form_for @user, html: { class: "signin card-panel" } do |f| %>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :username %>
          <%= f.text_field :username, class: "validate" %>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :email %>
          <%= f.email_field :email, class: "validate" %>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "validate" %>
        </div>
      </div>
      <div class="row entry-signup">
        <div class="input-field">
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: "validate" %>
        </div>
      </div>
      <div class="row submit-signin">
        <%= f.submit "Create Account", class: "btn waves-effect waves-light blue-signup" %>
      </div>
      <div class="row comment-signup">
        <p>If you got an account, please Sign In</p>
      </div>
    <% end %>
  </div>
</div>
